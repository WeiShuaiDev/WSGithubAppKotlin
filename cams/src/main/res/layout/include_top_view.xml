<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        style="@style/MatchAndMatch"
        tools:ignore="MissingConstraints"
        android:orientation="vertical">m

    <RelativeLayout
            android:id="@+id/mLayoutTopView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@color/colorPrimary">

        <TextView
                android:id="@+id/mTvTitle"
                style="@style/top_tv_title_style"/>

        <ImageButton
                android:id="@+id/mIbBack"
                android:src="@mipmap/ic_white_back"
                style="@style/top_ib_back_style"/>

        <TextView
                android:id="@+id/mTvRightTitle"
                style="@style/top_tv_right_style"
                android:visibility="gone"/>

        <ImageButton
                android:id="@+id/mIbChoose"
                android:visibility="gone"
                style="@style/top_ib_right_style"/>

    </RelativeLayout>

    <FrameLayout
            android:id="@+id/mIncludeContent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/mLayoutTopView"
            app:layout_constraintBottom_toBottomOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>