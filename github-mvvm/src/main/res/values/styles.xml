<resources>

    <style name="githubTheme" parent="CamsAppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--启动页样式-->
    <style name="splashTheme" parent="githubTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/colorGlobalWhite</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!--Toolbar样式-->
    <style name="toolbarTheme" parent="@style/githubTheme">
        <item name="colorControlNormal">@color/colorGlobalWhite</item>
    </style>

    <!--Card 白色样式-->
    <style name="whiteCardTheme" parent="MatchAndWrap">
        <item name="android:background">@color/colorGlobalWhite</item>
        <item name="android:layout_margin">@dimen/dp_5</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="verticalItemTextTheme">
        <item name="android:layout_weight">1</item>
        <item name="android:maxLines">2</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorSubLightText</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="shadowTextTheme" parent="WrapAndWrap">
        <item name="android:shadowColor">@color/colorPrimary</item>
        <item name="android:shadowRadius">0.5</item>
        <item name="android:shadowDx">0.5</item>
        <item name="android:shadowDy">0.5</item>
    </style>

    <style name="reposActionItemTextTheme" parent="shadowTextTheme">
        <item name="android:layout_weight">1</item>
        <item name="android:maxLines">2</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorSecondaryLight</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

</resources>
