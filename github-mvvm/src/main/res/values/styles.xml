<resources>

    <style name="githubTheme" parent="CamsAppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--启动页样式-->
    <style name="splashTheme" parent="githubTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/colorGlobalWhite</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!--Toolbar样式-->
    <style name="toolbarTheme" parent="@style/githubTheme">
        <item name="colorControlNormal">@color/colorGlobalWhite</item>
    </style>

    <!--Card 白色样式-->
    <style name="whiteCardTheme" parent="MatchAndWrap">
        <item name="android:background">@color/colorGlobalWhite</item>
        <item name="android:layout_margin">@dimen/dp_5</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

</resources>
