<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MatchAndMatch"
    tools:context=".mvvm.ui.module.repos.ReposDetailActivity">

    <LinearLayout
        android:id="@+id/repos_file_list_root"
        style="@style/MatchAndMatch"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <com.linwei.github_mvvm.mvvm.ui.view.HorizontalTextList
            android:id="@+id/repos_file_select_header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/repos_file_recycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>